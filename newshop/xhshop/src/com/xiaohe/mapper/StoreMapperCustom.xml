<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaohe.mapper.StoreMapperCustom" >
<update id="updateStore" parameterType="com.xiaohe.po.Store">
		update store set Smount = #{Smount} where id = #{id}
</update>

<select id="QueryAllShopinfo" resultType="com.xiaohe.po.ShopinfoQueryStore">

	select * from shopinfo,Store

</select>

</mapper>